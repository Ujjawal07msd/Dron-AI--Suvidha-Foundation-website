    <script>
        // GLOBAL FLAG DEFINITION: This is essential for the submission delay logic.
        let submitted = false;

        // --- Inquiry Form Handlers (Contact Page) ---
        function formSuccess() {
            console.log("Inquiry form submission success handler triggered.");
            const form = document.getElementById('contact-form');
            const messageDiv = document.getElementById('form-message');
            const submitButton = document.getElementById('contact-submit-btn');

            // 1. Show Success Message
            messageDiv.textContent = 'Thank you! We have received your message and will respond shortly.';
            messageDiv.className = 'mt-4 text-sm font-medium text-center text-green-600';
            
            // 2. Reset Form UI
            form.reset();
            resetFormValidationState(form);
            
            // 3. Reset Button State
            submitButton.disabled = false;
            submitButton.innerHTML = '<i class="fas fa-paper-plane mr-2"></i>Submit Inquiry';
            
            // Clear message after a delay
            setTimeout(() => {
                messageDiv.textContent = '';
            }, 6000);

            // 4. Reset Global Flag
            submitted = false;
        }

        // --- Universal Utilities ---

        function resetFormValidationState(form) {
             form.querySelectorAll('.form-field').forEach(field => {
                const input = field.querySelector('input, textarea, select');
                if (input) {
                    input.classList.remove('valid', 'invalid');
                }
                field.classList.remove('valid', 'invalid');
            });
        }

        // We declare the general iframe handler once. It checks which form submitted.
        const iframeLoadHandler = () => {
            console.log("Iframe finished loading.");
            const hiddenIframeContact = document.getElementById('hidden_iframe');
            
            // Only the Contact Form uses a hidden iframe and the 'submitted' flag now.
            if (submitted) {
                // Check if the contact iframe was the one that triggered the load
                formSuccess();
                if (hiddenIframeContact) hiddenIframeContact.removeEventListener('load', iframeLoadHandler);
            }
        };

        function validateAndSubmitForm(e) {
            // Function to validate a single field (used only by contact form now)
            const validateField = (field) => {
                const parent = field.closest('.form-field');
                if (!parent) return true;
                let isValid = false;
                
                if (field.type === 'email') {
                    isValid = /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(field.value);
                } else if (field.type === 'tel') {
                    // Basic 10 digit check for phone number
                    isValid = /^\d{10}$/.test(field.value);
                } else if (field.id === 'form-message-text') {
                    // Check Inquiry message length
                    isValid = field.value.trim().length >= 10;
                } else {
                    isValid = field.value.trim() !== '';
                }

                // Apply validation classes for styling
                const fieldInput = parent.querySelector('input:not([type=checkbox]), textarea, select');
                if (fieldInput) {
                    fieldInput.classList.toggle('valid', isValid);
                    fieldInput.classList.toggle('invalid', !isValid);
                }
                
                // For the whole field container
                parent.classList.toggle('valid', isValid);
                parent.classList.toggle('invalid', !isValid);
                return isValid;
            };

            e.preventDefault();
            const form = document.getElementById('contact-form');
            const submitButton = document.getElementById('contact-submit-btn');
            const messageDiv = document.getElementById('form-message');
            
            const inputs = form.querySelectorAll('input[required][name^="entry."], textarea[required][name^="entry."], select[required][name^="entry."]');
            let isFormValid = true;

            // Run validation on all required fields
            inputs.forEach(input => {
                if (!validateField(input)) {
                    isFormValid = false;
                }
            });

            if (isFormValid) {
                console.log(`Form contact-form validated successfully. Initiating silent submission.`);
                
                // UX feedback before submitting
                submitButton.disabled = true;
                submitButton.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Submitting...';

                // 1. Set global flag
                submitted = true;
                
                // 2. Attach the load listener *before* submission
                const hiddenIframe = document.getElementById('hidden_iframe');
                if (hiddenIframe) {
                    hiddenIframe.removeEventListener('load', iframeLoadHandler); 
                    hiddenIframe.addEventListener('load', iframeLoadHandler);
                }
                
                // 3. Submit form silently to the Google endpoint
                form.submit();
                
            } else {
                messageDiv.textContent = 'Please correct the highlighted errors before submitting.';
                messageDiv.className = 'mt-4 text-sm font-medium text-center text-red-600';
                setTimeout(() => {
                    messageDiv.textContent = '';
                }, 5000);
            }

            return false;
        }


        
        document.addEventListener('DOMContentLoaded', () => {
            console.log("DOM fully loaded and parsed.");

            // --- Window and Modal Helpers ---
            window.showModal = function (modalId, message = '') {
                const modal = document.getElementById(modalId);
                if (modal) {
                    const messageContent = modal.querySelector('#message-content');
                    if (messageContent && message) {
                        messageContent.textContent = message;
                    }
                    modal.classList.remove('hidden');
                    setTimeout(() => modal.classList.add('visible'), 10);
                }
            }

            window.hideModal = function (modalId) {
                const modal = document.getElementById(modalId);
                if (modal) {
                    modal.classList.remove('visible');
                    setTimeout(() => modal.classList.add('hidden'), 300);
                }
            }
            
            // Event listeners for modals
            document.getElementById('close-message-btn')?.addEventListener('click', () => hideModal('custom-message-box'));
            document.getElementById('custom-message-box')?.addEventListener('click', (e) => {
                if (e.target.id === 'custom-message-box') {
                    hideModal('custom-message-box');
                }
            });
            window.showComingSoonMessage = (item) => showModal('custom-message-box', `${item} is coming soon! Check back later for updates.`);

            // --- Page Navigation Logic ---
            const pageLinks = document.querySelectorAll('.page-link');
            const homeScrollLinks = document.querySelectorAll('.home-scroll');
            const pageContainers = document.querySelectorAll('.page-container');
            const navLinks = document.querySelectorAll('.nav-link');
            const mobileMenu = document.getElementById('mobile-menu');
            const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');

            const closeMenu = () => {
                mobileMenu.classList.remove('open');
                mobileMenuOverlay.classList.add('hidden');
            };

            function showPage(pageId, scrollToSection = null) {
                pageContainers.forEach(page => {
                    page.classList.add('hidden');
                });

                const activePage = document.getElementById(pageId);
                if (activePage) {
                    activePage.classList.remove('hidden');
                } else {
                    document.getElementById('page-home').classList.remove('hidden');
                }

                const pageName = pageId.replace('page-', '');

                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.classList.contains('page-link') && link.dataset.page === pageName) {
                        link.classList.add('active');
                    }
                });

                if (pageName === 'home') {
                    navLinks.forEach(link => link.classList.remove('active'));
                }

                if (scrollToSection) {
                    setTimeout(() => {
                        const target = document.querySelector(scrollToSection);
                        const header = document.getElementById('main-header');
                        if (target && header) {
                            const headerHeight = header.offsetHeight;
                            const targetPosition = target.getBoundingClientRect().top + window.scrollY - headerHeight;
                            window.scrollTo({
                                top: targetPosition,
                                behavior: 'smooth'
                            });
                        }
                    }, 50);
                } else {
                    window.scrollTo({
                        top: 0,
                        behavior: 'smooth'
                    });
                }
            }

            pageLinks.forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    const pageId = 'page-' + link.dataset.page;
                    showPage(pageId);
                    closeMenu();
                });
            });

            homeScrollLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href');
                    showPage('page-home', targetId);
                    closeMenu();
                });
            });

            // Show home page on initial load
            showPage('page-home');


            // Hide the preloader when the page is fully loaded
            const preloader = document.getElementById('preloader');
            window.addEventListener('load', () => {
                preloader.style.opacity = '0';
                preloader.style.visibility = 'hidden';
            });

            // Header class change on scroll
            const header = document.querySelector('header');
            window.addEventListener('scroll', () => header.classList.toggle('scrolled', window.scrollY > 50));

            // Mobile menu functionality
            const menuBtn = document.getElementById('menu-btn');
            const closeBtn = document.getElementById('close-btn');
            menuBtn.addEventListener('click', () => {
                mobileMenu.classList.add('open');
                mobileMenuOverlay.classList.remove('hidden');
            });
            closeBtn.addEventListener('click', closeMenu);
            mobileMenuOverlay.addEventListener('click', closeMenu);

            // Hero slider functionality
            const slides = document.querySelectorAll('.hero-slide');
            const prevSlideBtn = document.getElementById('prev-slide');
            const nextSlideBtn = document.getElementById('next-slide');
            const heroParticles = document.getElementById('hero-particles');
            let currentSlide = 0;

            function goToSlide(n) {
                if (slides.length > 0) {
                    slides[currentSlide].classList.remove('active');
                    currentSlide = (n + slides.length) % slides.length;
                    slides[currentSlide].classList.add('active');

                    // Animation adjustment for new slide content wrapper
                    document.querySelectorAll('.slide-content-wrapper').forEach(wrapper => {
                        wrapper.style.opacity = '0';
                        wrapper.style.pointerEvents = 'none';
                    });
                    const activeWrapper = slides[currentSlide].querySelector('.slide-content-wrapper');
                    if (activeWrapper) {
                        activeWrapper.style.opacity = '1';
                        activeWrapper.style.pointerEvents = 'auto'; // Re-enable pointer events

                        // Re-trigger fade-in animations on content after switching slide
                        activeWrapper.querySelectorAll('.container > *').forEach(el => {
                            el.style.animation = 'none';
                            void el.offsetHeight; // Trigger reflow
                            el.style.animation = null;
                        });
                    }


                    if (heroParticles) {
                        if (currentSlide === 0) {
                            heroParticles.style.display = 'block';
                        } else {
                            heroParticles.style.display = 'none';
                        }
                    }
                }
            }
            // Start the auto-slide timer
            let slideTimer = setInterval(() => goToSlide(currentSlide + 1), 7000);
            const resetSlideTimer = () => {
                clearInterval(slideTimer);
                slideTimer = setInterval(() => goToSlide(currentSlide + 1), 7000);
            };
            nextSlideBtn.addEventListener('click', () => {
                goToSlide(currentSlide + 1);
                resetSlideTimer();
            });
            prevSlideBtn.addEventListener('click', () => {
                goToSlide(currentSlide - 1);
                resetSlideTimer();
            });

            // Back to top button visibility
            const backToTopBtn = document.getElementById('back-to-top-btn');
            window.addEventListener('scroll', () => {
                backToTopBtn.classList.toggle('visible', window.scrollY > 300);
            });
            backToTopBtn.addEventListener('click', () => {
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            });

            // EXIT-INTENT MODAL
            const exitModal = document.getElementById('exit-intent-modal');
            if (exitModal) {
                const modalCta = document.getElementById('modal-cta');
                const handleMouseOut = (e) => {
                    if (e.clientY <= 0 && !sessionStorage.getItem('modalShown')) {
                        showModal('exit-intent-modal');
                        sessionStorage.setItem('modalShown', 'true');
                        document.removeEventListener('mouseout', handleMouseOut);
                    }
                };
                document.addEventListener('mouseout', handleMouseOut);
                modalCta.addEventListener('click', () => hideModal('exit-intent-modal'));
            }

            // Intersection Observer for fade-in animations
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, {
                threshold: 0.1
            });
            document.querySelectorAll('.fade-in').forEach(el => {
                observer.observe(el);
            });

            // Canvas particle animation
            const canvas = document.getElementById('hero-particles');
            if (canvas) {
                const ctx = canvas.getContext('2d');
                canvas.width = window.innerWidth;
                canvas.height = window.innerHeight;
                let particlesArray;

                class Particle {
                    constructor(x, y, directionX, directionY, size) {
                        this.x = x;
                        this.y = y;
                        this.directionX = directionX;
                        this.directionY = directionY;
                        this.size = size;
                    }
                    draw() {
                        ctx.beginPath();
                        ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2, false);
                        ctx.fillStyle = 'rgba(255, 255, 255, 0.2)';
                        ctx.fill();
                    }
                    update() {
                        if (this.x > canvas.width || this.x < 0) {
                            this.directionX = -this.directionX;
                        }
                        if (this.y > canvas.height || this.y < 0) {
                            this.directionY = -this.directionY;
                        }
                        this.x += this.directionX;
                        this.y += this.directionY;
                        this.draw();
                    }
                }

                function init() {
                    particlesArray = [];
                    let numberOfParticles = (canvas.height * canvas.width) / 9000;
                    for (let i = 0; i < numberOfParticles; i++) {
                        let size = (Math.random() * 2) + 1;
                        let x = (Math.random() * ((innerWidth - size * 2) - (size * 2)) + size * 2);
                        let y = (Math.random() * ((innerHeight - size * 2) - (size * 2)) + size * 2);
                        let directionX = (Math.random() * .4) - .2;
                        let directionY = (Math.random() * .4) - .2;
                        particlesArray.push(new Particle(x, y, directionX, directionY, size));
                    }
                }

                function animate() {
                    requestAnimationFrame(animate);
                    ctx.clearRect(0, 0, innerWidth, innerHeight);
                    for (let i = 0; i < particlesArray.length; i++) {
                        particlesArray[i].update();
                    }
                }
                init();
                animate();
                window.addEventListener('resize', () => {
                    canvas.width = innerWidth;
                    canvas.height = innerHeight;
                    init();
                });
            }

            // DYNAMIC COUNTER
            const counterObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    const counters = entry.target.querySelectorAll('.counter');
                    if (entry.isIntersecting) {
                        counters.forEach(counter => {
                            counter.innerText = '0';
                            const updateCount = () => {
                                const target = +counter.getAttribute('data-target');
                                const count = +counter.innerText.replace(/,/g, '');
                                const increment = target / 200;
                                if (count < target) {
                                    counter.innerText = Math.ceil(count + increment).toLocaleString('en-IN');
                                    setTimeout(updateCount, 1);
                                } else {
                                    counter.innerText = target.toLocaleString('en-IN');
                                }
                            };
                            updateCount();
                        });
                        // Stop observing once animation starts
                        counterObserver.unobserve(entry.target);
                    }
                });
            }, {
                threshold: 0.5
            });

            const trustSection = document.getElementById('trust');
            if (trustSection) counterObserver.observe(trustSection);

            // FAQ Accordion functionality
            document.querySelectorAll('.faq-question').forEach(button => {
                button.addEventListener('click', () => {
                    const answer = button.nextElementSibling;
                    const icon = button.querySelector('i');
                    answer.classList.toggle('hidden');
                    icon.classList.toggle('rotate-180');
                });
            });

            // Testimonial Slider with infinite loop and dots
            const testimonialContainer = document.getElementById('testimonial-slides');
            if (testimonialContainer) {
                const originalSlides = Array.from(testimonialContainer.children);
                const slideCount = originalSlides.length;
                const dotsContainer = document.getElementById('testimonial-dots');
                let allSlides = [...originalSlides];

                if (slideCount > 1) {
                    const firstClone = originalSlides[0].cloneNode(true);
                    const lastClone = originalSlides[slideCount - 1].cloneNode(true);
                    testimonialContainer.appendChild(firstClone);
                    testimonialContainer.insertBefore(lastClone, originalSlides[0]);
                    allSlides = Array.from(testimonialContainer.children);

                    for (let i = 0; i < slideCount; i++) {
                        const dot = document.createElement('button');
                        dot.classList.add('dot');
                        dot.setAttribute('data-index', i);
                        dotsContainer.appendChild(dot);
                    }
                }

                const dots = dotsContainer ? Array.from(dotsContainer.children) : [];
                let currentIndex = 1;
                const intervalTime = 6000;

                const updateDots = () => {
                    if (dots.length === 0) return;
                    const realIndex = (currentIndex - 1 + slideCount) % slideCount;
                    dots.forEach((dot, index) => {
                        dot.classList.toggle('active', index === realIndex);
                    });
                };

                const updateSliderPosition = (withTransition) => {
                    testimonialContainer.style.transition = withTransition ? 'transform 0.5s ease-in-out' : 'none';
                    testimonialContainer.style.transform = `translateX(-${currentIndex * 100}%)`;
                    if (withTransition) {
                        updateDots();
                    }
                };

                updateSliderPosition(false);
                updateDots();

                const moveToNext = () => {
                    // This handles the transition from the last visible slide to the cloned first slide
                    if (currentIndex >= allSlides.length - 1) {
                         currentIndex++;
                         updateSliderPosition(true);
                         // Don't return here, let transitionend handle the reset
                    } else {
                        currentIndex++;
                        updateSliderPosition(true);
                    }
                };

                const moveToPrev = () => {
                    // This handles the transition from the first visible slide to the cloned last slide
                    if (currentIndex <= 0) {
                        currentIndex--;
                        updateSliderPosition(true);
                        // Don't return here, let transitionend handle the reset
                    } else {
                        currentIndex--;
                        updateSliderPosition(true);
                    }
                };

                const goToTestimonial = (index) => {
                    currentIndex = index + 1;
                    updateSliderPosition(true);
                }

                let testimonialInterval = setInterval(moveToNext, intervalTime);
                const resetTestimonialInterval = () => {
                    clearInterval(testimonialInterval);
                    testimonialInterval = setInterval(moveToNext, intervalTime);
                };

                document.getElementById('next-testimonial')?.addEventListener('click', () => {
                    moveToNext();
                    resetTestimonialInterval();
                });

                document.getElementById('prev-testimonial')?.addEventListener('click', () => {
                    moveToPrev();
                    resetTestimonialInterval();
                });

                dots.forEach(dot => {
                    dot.addEventListener('click', (e) => {
                        const index = parseInt(e.target.getAttribute('data-index'));
                        goToTestimonial(index);
                        resetTestimonialInterval();
                    })
                });

                testimonialContainer.addEventListener('transitionend', () => {
                    // Seamless loop: If we hit the cloned first slide, jump back to the real first slide instantly
                    if (currentIndex === allSlides.length - 1) {
                        currentIndex = 1;
                        updateSliderPosition(false);
                    } 
                    // Seamless loop: If we hit the cloned last slide, jump back to the real last slide instantly
                    else if (currentIndex === 0) {
                        currentIndex = slideCount;
                        updateSliderPosition(false);
                    }
                    updateDots();
                });
            }

            // About Us Read More functionality
            const dronaiVisionTextElement = document.getElementById('dronai-vision-text');
            const readMoreToggle = document.getElementById('read-more-toggle');
            const downloadBroucherBtn = document.getElementById('download-broucher');

            if (dronaiVisionTextElement && readMoreToggle && downloadBroucherBtn) {
                // Read the full text directly from the DOM before truncation
                const fullText = dronaiVisionTextElement.textContent.trim();
                const truncatedText = fullText.substring(0, 200) + '...';
                let isExpanded = false;

                const toggleText = () => {
                    isExpanded = !isExpanded;
                    if (isExpanded) {
                        dronaiVisionTextElement.textContent = fullText;
                        readMoreToggle.textContent = 'Read less...';
                        downloadBroucherBtn.classList.remove('hidden');
                    } else {
                        dronaiVisionTextElement.textContent = truncatedText;
                        readMoreToggle.textContent = 'Read more...';
                        downloadBroucherBtn.classList.add('hidden');
                    }
                };

                if (fullText.length > 200) {
                    // Initial setup: truncate text
                    dronaiVisionTextElement.textContent = truncatedText;
                    readMoreToggle.addEventListener('click', (e) => {
                        e.preventDefault();
                        toggleText();
                    });
                } else {
                    // If text is naturally short, hide the toggle and show the button
                    readMoreToggle.style.display = 'none';
                    downloadBroucherBtn.classList.remove('hidden');
                }
            }

            // Timeline progress bar functionality
            const timeline = document.querySelector('#page-home .timeline');
            const timelineProgress = document.getElementById('timeline-progress');

            function updateTimelineProgress() {
                if (!timeline || !timelineProgress || document.getElementById('page-home').classList.contains('hidden')) {
                    timelineProgress.style.height = '0%';
                    return;
                }
                const timelineRect = timeline.getBoundingClientRect();
                const viewportHeight = window.innerHeight;

                const start = timelineRect.top;
                const end = timelineRect.bottom;
                // Calculate how much of the timeline is past the top of the viewport
                const progressStart = Math.max(0, -start);
                // Calculate the total height of the visible timeline area
                const totalHeight = end - timelineRect.top;
                
                let progress = progressStart / totalHeight;
                progress = Math.max(0, Math.min(1, progress));

                // This logic ensures the line grows based on scroll relative to the element itself
                const scrollFromTop = window.scrollY;
                const sectionTop = timeline.offsetTop;
                const sectionHeight = timeline.offsetHeight;
                
                const visibleBottom = scrollFromTop + viewportHeight;
                const startPoint = sectionTop + (viewportHeight * 0.1); // Start filling a bit after the section begins
                const endPoint = sectionTop + sectionHeight - (viewportHeight * 0.1); // Finish filling a bit before the section ends
                
                let scrollProgress = (scrollFromTop - startPoint) / (endPoint - startPoint);
                scrollProgress = Math.max(0, Math.min(1, scrollProgress));
                
                timelineProgress.style.height = `${scrollProgress * 100}%`;
            }

            window.addEventListener('scroll', updateTimelineProgress);
            window.addEventListener('resize', updateTimelineProgress);
            // Run on load to set initial state
            updateTimelineProgress(); 
        });
    </script>
</body>

</html>
